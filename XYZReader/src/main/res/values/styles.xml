<resources>

    <style name="Theme.Bacon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Since we're using a PreferenceFragmentCompat library, we need to add a theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="Theme.Settings" parent="BaseTheme">
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for Preference -->
    <style name="PreferenceThemeOverlay">
        <item name="android:background">@color/color_pref_background</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>
</resources>
